{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "ES6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "types": ["react/next", "react-dom/next", "node"],
    "paths": {
      "@Components/*": ["./components/*"],
      "@Pages/*": ["./pages/*"],
      "@Utils/*": ["./utils/*"],
      "@Client/*": ["./client/*"],
      "@Assets/*": ["../assets/*"],
      "@/*": ["./*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js", "./**/*.jsx", "@types/**/*.d.ts", ".eslintrc.js"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", ".husky", "assets"]
}